    <Button android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_height="60dp" android:layout_width="60dp" android:textSize="20sp" android:gravity="bottom|right" android:id="@+id/btn_8" android:background="@drawable/white_btn_selector" android:text="8" android:layout_marginLeft="10dip"/>

