        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

    <Button android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:textSize="20sp"
        android:gravity="bottom|right"
        android:id="@+id/btn_clear"
        android:background="@drawable/white_btn_selector" android:text="C"/>

    <Button android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_height="60dp" android:layout_width="60dp" android:textSize="20sp" android:gravity="bottom|right" android:id="@+id/btn_del" android:background="@drawable/white_btn_selector" android:text="DEL" android:layout_marginLeft="10dip"/>

